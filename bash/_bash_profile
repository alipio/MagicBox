# Default
export CLICOLOR='true'
export LSCOLORS='exgxfxdxcxegedabagacad'
export PS1="\h:\W $ "

# MacOSX
PATH=$PATH:/Developer/Tools
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'

# Git
if [ -f ~/.git-completion.bash ]; then
    . ~/.git-completion.bash
fi
# show the branch name in prompt in git source code folder.
PS1='\n \W$(__git_ps1 " (%s)") \$ '
# e.g. GIT_PS1_SHOWDIRTYSTATE can be overrade by per-repository variable bash.showDirtyState.
GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWSTASHSTATE=1
GIT_PS1_SHOWUNTRACKEDFILES=1
GIT_PS1_SHOWUPSTREAM=git verbose

# Ruby
# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"
# source the completion for rvm.
[[ -r $rvm_path/scripts/completion ]] && . $rvm_path/scripts/completion
# Add RVM to PATH for scripting
PATH=$PATH:$HOME/.rvm/bin

# Python
# Setting PATH for Python 2.7
PATH="/Library/Frameworks/Python.framework/Versions/2.7/bin:${PATH}"

# pip bash completion start
_pip_completion()
{
    COMPREPLY=( $( COMP_WORDS="${COMP_WORDS[*]}" \
                   COMP_CWORD=$COMP_CWORD \
                   PIP_AUTO_COMPLETE=1 $1 ) )
}
complete -o default -F _pip_completion pip
# pip bash completion end

# MySQL
PATH="/usr/local/mysql/bin:${PATH}"

# JAVA
export JAVA_HOME=$(/usr/libexec/java_home)
export CATALINA_HOME=~/Applications/apache-tomcat/
export ANT_HOME=/usr/share/ant

# Common
alias ll='ls -l'
export EDITOR=vim

PATH=$PATH:~/bin
export PATH

if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi
